# ==== SERVER CONFIG ====

# ==== Production ====
# NODE_ENV=production

# ==== Development ====
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
REDIS_URL=redis://localhost:6379

# ==== APP SETTINGS ====
SITE_NAME=AI Landing Platform Manager 

# ==== DATABASE ====
MONGO_URI=mongodb://localhost:27017/ai-landing
MONGO_INITDB_ROOT_USERNAME=admin_name
MONGO_INITDB_ROOT_PASSWORD=your_password

# ==== SESSION & AUTH ====
SESSION_SECRET=secret1,secret2,secret3

# ==== API KEYS ====
OPENAI_API_KEY=sk-xxxxx
API_KEY=your-internal-api-key

# ==== PUSH NOTIFICATIONS ====
VAPID_MAILTO=mailto:admin@yourdomain.com
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ==== EMAIL CONFIG ====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# ==== PAYMENT (STRIPE) ====
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ==== PAYMENT (PAYPAL) ====
PAYPAL_CLIENT_ID=xxxx
PAYPAL_CLIENT_SECRET=xxxx

# ==== EXTERNAL INTEGRATIONS ====
GOOGLE_TRENDS_API_KEY=xxxxx
CRM_WEBHOOK_URL=https://your-crm.com/webhook

# ==== LOGGING & MONITORING ====
LOG_LEVEL=info
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ==== CORS & SECURITY ====
ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com
UPLOAD_MAX_SIZE=10485760

# ==== TEST DATA ====
TEST_BASE_URL=http://localhost:3000
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASS=admin123!
TEST_TENANT_EMAIL=tenant@example.com
TEST_TENANT_PASS=tenant123!
